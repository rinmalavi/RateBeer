GET     /                               controllers.Application.index

GET     /user                           controllers.Application.userScreen(user: String)

GET     /beers                          controllers.Application.beers

GET     /users                          controllers.Application.users

GET     /beer                           controllers.Application.beerScreen(beer: String)

GET     /api/logout                     controllers.Application.logout

POST    /api/login                      controllers.Application.login

POST    /api/signup                     controllers.Application.signUp

POST    /api/newBeer                    controllers.Application.newBeer

POST    /api/simpleGrade/:beeruri       controllers.Application.newSimpleGrade(beeruri)

POST    /api/grade/:beeruri             controllers.Application.newGrade(beeruri)

GET     /assets/*file                   controllers.Assets.at(path="/public", file)